<div class="col-12 col-md-4 col-xl-3 d-flex justify-content-center">
	<a href="/product/{{ item.id }}">
		<div class="card my-3">
			<img src={{ item.image }} class="card-img-top" alt="Product">
			<div class="card-body">
				<h5 class="card-title">{{ item.title }}</h5>
				<p class="card-text">{{ item.price }}kr</p>
			</div>
		</div>
	</a>
</div>
