{% extends 'base.html.twig' %}

{% block css %}
	<link rel="stylesheet" href={{ asset('build/styles/products.css') }}>
{% endblock %}

{% block body %}
	<div class="container-md productsContainer">
		<h1 class="mt-3 text-center">{{ sex|upper }}</h1>
		{{ component('breadcrumb', {
			links: links,
			active: 'Products'
			})
		}}
		<div class="row">
			{% for item in products %}
				{{ component('card', {
					item: item
				}) }}
			{% endfor %}
		</div>
	</div>
{% endblock %}
